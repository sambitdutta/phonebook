<% content_for :page_header do %>
  New Contact
<%end%>


<%= form_for @contact do |f|%>
  
   <% if @contact.errors.any? %>
    <ul>
      <% @contact.errors.full_messages.each do |msg| %>
       <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  
  <div class="form-group">
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name, :class => "form-control" %>
  </div>

  <div class="form-group">
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name, :class => "form-control" %>
  </div>

  <%= f.fields_for :phones do |builder|%>
    <%= render "contacts/shared/phone_fields", :f => builder %>
  <%end%>

  <div class="row">
      <div class="col-sm-12">
          <%= link_to_add_fields "Add Phone", f, :phones %>
      </div>
  </div>
  <br/>

  <%= f.fields_for :addresses do |builder|%>
    <%= render "contacts/shared/address_fields", :f => builder %>
  <%end%>

  <div class="row">
      <div class="col-sm-12">
          <%= link_to_add_fields "Add Address", f, :addresses %>
      </div>
  </div>

  <br/>

  <div class="actions">
      <%= f.submit "Save", :class => 'btn btn-primary btn-lg'%>
  </div>

<%end%>  
